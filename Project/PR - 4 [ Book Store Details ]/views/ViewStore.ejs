<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #2c3e50;
            font-size: 2rem;
            text-align: center;
        }

        .container {
            margin-top: 40px;
        }

        .table {
            width: 100%;
            background-color: #fff;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .table th {
            background-color: #3498db;
            color: white;
            padding: 16px;
            font-size: 1.1rem;
            text-align: center;
        }

        .table td {
            padding: 16px;
            text-align: center;
            vertical-align: middle;
            font-size: 1rem;
        }

        .table tr:nth-child(even) {
            background-color: #ecf0f1;
        }

        .table tr:hover {
            background-color: #d1ecf1;
        }

        .table img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 5px;
        }

        .btn {
            padding: 10px 18px;
            font-size: 1rem;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            color: white;
        }

        .btn-danger {
            background-color: #e74c3c;
        }

        .btn-danger:hover {
            background-color: #c0392b;
        }

        .btn-primary {
            background-color: #3498db;
        }

        .btn-primary:hover {
            background-color: #2980b9;
        }

        .d-flex {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .d-flex .btn-dark {
            background-color: #2c3e50;
            color: white;
        }

        .d-flex .btn-dark:hover {
            background-color: #34495e;
        }

        .text-center {
            text-align: center;
        }

        .action-btns {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .col-7 {
            padding: 0;
        }

        .col-3 {
            padding: 0;
            text-align: right;
        }
    </style>
</head>

<body>
    <div>
        <div class="d-flex justify-content-center align-items-center py-3">
            <div class="col-6 text-center">
                <h1>View Store</h1>
            </div>
            <div class="col-2 text-end">
                <a href="/" class="btn btn-dark">Add New Item</a>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Author</th>
                            <th>Pages</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% detail.map((val) => { %>
                            <tr>
                                <td><img src="<%= val.image %>" alt="Item Image"></td>
                                <td><%= val.name %></td>
                                <td><%= val.author %></td>
                                <td><%= val.pages %></td>
                                <td>â‚¹<%= val.price %></td>
                                <td>
                                    <div class="action-btns">
                                        <a href="/delete?deletId=<%= val.id %>" class="btn btn-danger">Delete</a>
                                        <a href="/edit?editId=<%= val.id %>" class="btn btn-primary">Edit</a>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
