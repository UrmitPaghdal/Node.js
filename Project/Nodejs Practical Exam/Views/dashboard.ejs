<%- include('Header') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Blog Management</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Arial', sans-serif;
      color: #333;
    }

    h3 {
      font-weight: 600;
      color: #444;
      text-align: center;
      margin-bottom: 20px;
    }

    .container {
      max-width: 900px;
      margin: 20px auto;
    }

    .card {
      border: 1px solid #ddd;
      border-radius: 10px;
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.05);
    }

    .card img {
      object-fit: cover;
      height: 180px;
      width: 100%;
      border-bottom: 3px solid #007bff;
    }

    .card-title {
      font-size: 1.2rem;
      font-weight: 600;
      color: #333;
    }

    .card-text {
      font-size: 0.95rem;
      color: #555;
    }

    .btn {
      border-radius: 5px;
      font-size: 0.9rem;
      padding: 8px 15px;
    }

    .row {
      margin-top: 20px;
    }

    @media (max-width: 768px) {
      .card img {
        height: 140px;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <h3 style="font-weight: 900;">Welcome...<%= locals.users.name %>!</h3>

    <div class="row">
      <% blogs.map((blog, i) => { %>
      <div class="col-md-6 mb-4">
        <div class="card">
          <img src="/<%= blog.image %>" class="card-img-top" alt="Blog Image" />
          <div class="card-body">
            <h5 class="card-title text-capitalize"><%= blog.title %></h5>
            <p class="card-text"><%= blog.caption %></p>
            <div class="d-flex justify-content-between">
              <a href="/deleteblog?id=<%= blog._id %>" class="btn btn-outline-danger">Delete</a>
              <a href="/editblog?id=<%= blog._id %>" class="btn btn-outline-primary">Edit</a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</body>
</html>

<%- include('Footer') %>
